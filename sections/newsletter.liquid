    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:shared.settings.text_color.label",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "input_color",
      "label": "t:shared.settings.input_color.label",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "input_background",
